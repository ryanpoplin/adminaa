body {
	font-family: 'Oswald', sans-serif;
	background-color: #fefefe;
	.container {
		#logo {
			text-align: center;
			font-size: 1.3em;
			font-weight: 100;
			color: #10b5b8;
			text-shadow: 1px 1px 1px #e0e0e0;
		}
		#login-form-area {
			background-color: #fafafa;
			box-shadow: 1px 2px 1px #e0e0e0;
			border: 1px solid #e9e9e9;
			border-radius: 4px;
			margin: 0 auto;
			padding: 15px 0;
			width: 200px;
			input[type=text] {
				font-family: 'Oswald', sans-serif;
				border-radius: 2px;
				border: 1px solid #e9e9e9;
				font-size: 0.8em;
				padding: 10px;
				display: block;
				height: 10px;
				width: 140px;
				margin: 10px auto;
			}
			input[type=password] {
				font-family: 'Oswald', sans-serif;
				border-radius: 2px;
				border: 1px solid #e0e0e0;
				font-size: 0.8em;
				padding: 10px;
				display: block;
				height: 10px;
				width: 140px;
				margin: 10px auto;
			}
			.log-in {
				font-weight: 100;
				box-shadow: 1px 2px 1px #c0c0c0;
				font-family: 'Oswald', sans-serif;
				cursor: pointer;
				border: 1px solid #c0c0c0;
				border-radius: 4px;
				padding: 5px;
				text-align: center;
				width: 50px;
				margin: 20px auto 0 auto;
				display: block;
				background-color: #10b5b8;
				color: #fefefe;
				font-size: 0.8em;
			}
		}
	}
}