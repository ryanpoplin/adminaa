body {
	font-family: 'Oswald', sans-serif;
	background-color: #fafafa;
	.container {
		margin: 0 auto;
		width: 960px;
		@media (max-width: 965px) {
			width: 80%;
		}
		#logo {
			text-align: center;
			font-size: 3.5em;
			color: #10b5b8;
			text-shadow: 1px 1px 1px #e0e0e0;
		}
		#login-form-area {
			box-shadow: 1px 2px 1px #e0e0e0;
			border: 1px solid #e9e9e9;
			background-color: #fdfdfd;
			border-radius: 4px;
			margin: 0 auto;
			padding: 25px 0;
			width: 450px;
			@media (max-width: 965px) {
				width: 100%;
			}
			input[type=text] {
				box-shadow: 0 2px 0 #e0e0e0;
				font-family: 'Oswald', sans-serif;
				border-radius: 4px;
				border: 1px solid #e9e9e9;
				font-size: 25px;
				padding: 10px;
				display: block;
				height: 30px;
				width: 280px;
				margin: 10px auto;
			}
			input[type=password] {
				box-shadow: 0 2px 0 #e0e0e0;
				font-family: 'Oswald', sans-serif;
				border-radius: 4px;
				border: 1px solid #e0e0e0;
				font-size: 25px;
				padding: 10px;
				display: block;
				height: 30px;
				width: 280px;
				margin: 10px auto;
			}
			.log-in {
				box-shadow: 1px 2px 1px #c0c0c0;
				font-family: 'Oswald', sans-serif;
				cursor: pointer;
				border: 1px solid #c0c0c0;
				border-radius: 4px;
				padding: 15px;
				margin: 20px auto 0 auto;
				display: block;
				background-color: #10b5b8;
				color: #fefefe;
				font-size: 1.5em;
			}
		}
	}
}